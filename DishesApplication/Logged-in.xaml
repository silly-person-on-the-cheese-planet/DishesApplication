<Window x:Class="DishesApplication.Logged_in"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DishesApplication"
        mc:Ignorable="d"
        Title="Logged_in" Height="120" Width="400" WindowStyle="None" FontFamily="Comic Sans MS">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0 10 0 0">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 0 0 50">Добро пожаловать, зарегистрированный пользователь</TextBlock>
            <Button Width="120" Height="25" Background="#FF76E383" BorderThickness="2" BorderBrush="#FF4B8C4F">Выход</Button>
        </StackPanel>

    </Grid>
</Window>
